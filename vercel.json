{
  "version": 2,
  "builds": [
    { "src": "index.js", "use": "@vercel/node" },
    { "src": "dist/index.html", "use": "@vercel/static" },
    { "src": "dist/assets/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "index.js"
    },
   
    {
      "src": "/assets/(.*)", 
      "dest": "/assets/$1", 
      "continue": true       
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico",
      "continue": true
    },
    { "src": "/resetpassword/(.*)", "dest": "/index.html" },
    {
      "src": "/(.*)",
      "missing": [ 
        { "type": "file" },
        { "type": "directory" }
      ],
      "dest": "/index.html"
    }
  ]
}
